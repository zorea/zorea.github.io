  "main": "lib/index.js",
  "jest": {
    "modulePaths": [
      "<rootDir>"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "babel-jest"
    }
  },
  "scripts": {
    "start": "rimraf lib && npm run test && npm run serve",
    "serve": "rimraf lib && cross-env BUILD_MODE='serve' webpack --mode=production --progress --watch",
    "build": "rimraf lib && webpack --mode=production --optimize-minimize --progress",
    "build:travis": "rimraf lib && webpack --mode=production --optimize-minimize",
    "test": "jest --all",
    "deploy": "echo \"No deploy specified\"",
    "deploy:clean": "echo \"No deploy:clean specified\"",
    "deploy:folder": "echo \"No deploy:folder specified\"",
    "deploy:staging": "echo \"No deploy:staging specified\"",
    "deploy:production": "echo \"No deploy:production specified\"",
    "storybook": "start-storybook -s /.out -p 6006",
    "storybook:build": "build-storybook --output-dir .out",
    "storybook:deploy": "exit 0; # TODO rm -fr .out && npm run build-storybook && cp scripts/CNAME .out/ && storybook-to-ghpages -- --existing-output-dir .out"
  },
