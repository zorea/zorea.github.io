                                    <shadow type="math_number">
                                        <field name="NUM">10</field>
                                    </shadow>
                                </value>
                            </block>
                        </next>
                    </block>
                </statement>
            </block>
            <block type="smaa_statement">
                <statement name="STATEMENT">
                    <block type="input_list" deletable="false" movable="false">
                        <value name="INPUT_LIST"></value>
                        <next>
