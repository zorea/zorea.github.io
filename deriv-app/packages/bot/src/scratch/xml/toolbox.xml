            <block type="read_ohlc_obj"></block>
            <block type="ohlc_values"></block>
            <block type="ohlc_values_in_list"></block>
            <block type="get_ohlc">
                <field name="CANDLEINTERVAL_LIST">default</field>
                <value name="CANDLEINDEX">
                    <shadow type="math_number">
